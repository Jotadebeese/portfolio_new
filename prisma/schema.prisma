generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Projects {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  description String
  categority  String
  createdAt   DateTime
  github      String?
  live        String?
  published   Boolean  @default(false)
  tech        Tech[]
  content     Content[]
}

model Tech {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  icon       String
  projects   Projects[]
}

model Content {
  id        Int @id @default(autoincrement())
  point1    String?
  point2    String?
  point3    String?
  point4    String?
  point5    String?
  point6    String?
  projects  Projects[]
}